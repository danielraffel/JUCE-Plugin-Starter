PROJECT_NAME=MyCoolPlugin
PROJECT_BUNDLE_ID=com.myname.mycoolplugin
PROJECT_PATH=~/JUCE-Plugin-Starter
COMPANY_NAME="Your Company Name"
JUCE_REPO=https://github.com/juce-framework/JUCE.git
JUCE_TAG=8.0.7  # Can use main for latest (not recommended for production)
GITHUB_USERNAME=danielraffel
BASE_PROJECT_VERSION="1.0."

# --- Apple Notarization ---
APPLE_ID=your@email.com
APP_SPECIFIC_PASSWORD=your-app-password
APP_CERT="Developer ID Application: Your Name (TEAM_ID)"
INSTALLER_CERT="Developer ID Installer: Your Name (TEAM_ID)"
TEAM_ID=YOUR_TEAM_ID

# === Plugin Configuration (Optional Overrides) ===
# Uncomment and modify these to override CMakeLists.txt defaults

# Plugin Type Configuration
# PLUGIN_IS_SYNTH=TRUE              # TRUE for synths, FALSE for effects
# PLUGIN_NEEDS_MIDI_INPUT=TRUE      # TRUE if plugin processes MIDI
# PLUGIN_NEEDS_MIDI_OUTPUT=FALSE    # TRUE if plugin generates MIDI
# PLUGIN_IS_MIDI_EFFECT=FALSE       # TRUE for MIDI-only effects

# Plugin Identification
# PLUGIN_MANUFACTURER_CODE=Juce     # 4-character manufacturer code
# PLUGIN_CODE=MYPL                  # 4-character unique plugin code

# Plugin Formats (semicolon-separated)
# PLUGIN_FORMATS="AU;VST3;Standalone"  # Available: AU VST3 VST Standalone AAX

# VST3 Category
# PLUGIN_VST3_CATEGORIES=Synth      # Synth, Fx, Instrument, etc.

# Audio Unit Configuration
# PLUGIN_AU_MAIN_TYPE=kAudioUnitType_MusicDevice  # AU main type
# PLUGIN_AU_EXPORT_PREFIX=MyCoolPluginAU          # AU export prefix

# Editor Configuration
# PLUGIN_EDITOR_WANTS_KEYBOARD_FOCUS=TRUE  # Allow keyboard input in editor

# Build Configuration
# PLUGIN_COPY_AFTER_BUILD=TRUE      # Auto-install plugin after build

# === Optional JUCE Modules ===
# Uncomment to enable additional JUCE modules
# ENABLE_JUCE_DSP=ON                # Digital Signal Processing
# ENABLE_JUCE_OPENGL=OFF            # OpenGL graphics
# ENABLE_JUCE_CRYPTOGRAPHY=OFF      # Cryptographic functions

# === Optional Distribution Options ===
# ZIP_DMG=true          # Automatically zip the DMG after creation (default: true)
# ZIP_PKG=false         # Automatically zip the PKG file (default: false)
